[user]
	name = Rebecca Turner
	email = rbt@sent.as
[push]
	default = simple
	followTags = true
[core]
	editor = nvim
	autocrlf = false
	excludesFile = ~/.gitignore_global
	attributesFile = ~/.gitattributes_global
	eol = lf
	pager = delta --features main-theme
[commit]
	verbose = true
[interactive]
	diffFilter = delta --color-only
[merge]
	# Enable zealous diff3.
	# https://stackoverflow.com/a/70387424
	conflictStyle = zdiff3
[diff]
	algorithm = histogram
[difftool]
	prompt = false
[rerere]
	enabled = true
[alias]
	last = log -1 HEAD
	graph = log --decorate --oneline --graph
	co = checkout
	d = diff
	g = graph
	p = pull
	pu = push
	st = status
	sw = switch
	leash = push --force-with-lease
	wa = worktree add
	wl = worktree list
	wm = worktree move
	wr = worktree remove
[hub]
	protocol = ssh
[branch]
	autoSetupMerge = always
	sort = -committerdate
[branch.master]
	remote = origin
[gui]
	encoding = utf-8
[pull]
	# Only fast-forward merges are allowed when pulling.
	ff = only
[rebase]
	autoSquash = true
	autoStash = true
[init]
	defaultBranch = main
[fetch]
	prune = true
[delta "main-theme"]
	line-numbers = true
	syntax-theme = Dracula
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
[include]
	path = ~/.gitconfig_local
[apply]
	ignoreWhitespace = change
[safe]
	directory = /etc/nixos
[revise]
	# What the hell, why does `git-revise` have its own bespoke commit signing
	# implementation that can't sign commits with SSH keys???
	# https://github.com/mystor/git-revise/issues/123
	gpgSign = false
[worktree]
	guessRemote = true
[checkout]
	guess = true
	defaultRemote = origin
