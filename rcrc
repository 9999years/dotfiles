# shellcheck shell=sh
# vim: ft=sh
uname=$(uname)

export EXCLUDES="\
    README.md \
    macos \
    linux \
"

export UNDOTTED=Library
if [ "$uname" != Darwin ]; then
    EXCLUDES="Library $EXCLUDES"
fi

export SYMLINK_DIRS="\
    config/fish \
    config/nvim \
    config/npingler \
    config/Code/User \
    tmux/plugins/tpm \
"
export DOTFILES_DIRS="\
    ~/.dotfiles \
"

case "$uname" in
    Darwin)
        DOTFILES_DIRS="$DOTFILES_DIRS ~/.dotfiles/macos"
        ;;

    Linux)
        DOTFILES_DIRS="$DOTFILES_DIRS ~/.dotfiles/linux"
        ;;
esac
